{
    "name": "cerbero/laravel-dto",
    "type": "library",
    "description": "Data Transfer Object (DTO) for Laravel",
    "keywords": [
        "laravel",
        "dto",
        "data transfer object"
    ],
    "homepage": "https://github.com/cerbero/laravel-dto",
    "license": "MIT",
    "authors": [{
        "name": "Andrea Marco Sartori",
        "email": "andrea.marco.sartori@gmail.com",
        "homepage": "https://github.com/cerbero90",
        "role": "Developer"
    }],
    "require": {
        "php": "^7.3||^8.0",
        "cerbero/dto": "^2.1",
        "doctrine/dbal": "^3.0",
        "illuminate/console": ">=8.0",
        "illuminate/container": ">=8.0",
        "illuminate/database": ">=8.0",
        "illuminate/filesystem": ">=8.0",
        "illuminate/http": ">=8.0",
        "illuminate/support": ">=8.0"
    },
    "require-dev": {
        "laravel/legacy-factories": "^1.1",
        "orchestra/testbench": ">=6.0",
        "phpunit/phpunit": ">=9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Cerbero\\LaravelDto\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cerbero\\LaravelDto\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs --standard=psr12 src",
        "fix-style": "phpcbf --standard=psr12 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Cerbero\\LaravelDto\\Providers\\LaravelDtoServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
